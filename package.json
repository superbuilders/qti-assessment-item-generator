{
	"name": "qti-assessment-item-generator-monorepo",
	"private": true,
	"type": "module",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "bun run --cwd packages/lib build",
		"build:lib": "bun run --cwd packages/lib build",
		"build:app": "bun run --cwd packages/app build",
		"typecheck": "bun run --cwd packages/lib typecheck && bun run --cwd packages/app typecheck",
		"dev": "bun run --cwd packages/app dev",
		"dev:inngest": "bun run --cwd packages/app dev:inngest",
		"lint": "bun run --cwd packages/lib lint && bun run --cwd packages/app lint",
		"format": "bun run --cwd packages/lib format",
		"test": "bun test"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.0.0-beta.6",
		"@types/bun": "1.3.1",
		"typescript": "^5.9.3"
	}
}
